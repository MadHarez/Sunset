<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scene"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/sky"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.61"
        android:background="@color/blue_sky">

        <!-- Stars container -->
        <ImageView
            android:id="@+id/star1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:alpha="0"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="80dp"
            android:alpha="0"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="50dp"
            android:alpha="0"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="120dp"
            android:alpha="0"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="100dp"
            android:alpha="0"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/star6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="150dp"
            android:alpha="0"
            android:src="@drawable/star" />

        <!-- Moon -->
        <ImageView
            android:id="@+id/moon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="end|top"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="60dp"
            android:alpha="0"
            android:src="@drawable/moon" />

        <!-- Clouds container -->
        <ImageView
            android:id="@+id/cloud1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:alpha="0"
            android:src="@drawable/cloud" />

        <ImageView
            android:id="@+id/cloud2"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="100dp"
            android:alpha="0"
            android:src="@drawable/cloud" />

        <ImageView
            android:id="@+id/cloud3"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="40dp"
            android:alpha="0"
            android:src="@drawable/cloud" />

        <!-- Sun -->
        <ImageView
            android:id="@+id/sun"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/sun" />
    </FrameLayout>

    <!-- Ocean/Sea section with waves and reflections -->
    <FrameLayout
        android:id="@+id/sea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.39"
        android:background="@color/sea">

        <!-- Sun reflection -->
        <ImageView
            android:id="@+id/sun_reflection"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:alpha="0.6"
            android:rotation="180"
            android:scaleY="0.8"
            android:src="@drawable/sun" />

        <!-- Moon reflection -->
        <ImageView
            android:id="@+id/moon_reflection"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="60dp"
            android:alpha="0"
            android:rotation="180"
            android:scaleY="0.7"
            android:src="@drawable/moon" />

        <!-- Star reflections -->
        <ImageView
            android:id="@+id/star1_reflection"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:alpha="0"
            android:rotation="180"
            android:scaleY="0.6"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/star2_reflection"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="25dp"
            android:alpha="0"
            android:rotation="180"
            android:scaleY="0.6"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/star3_reflection"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="15dp"
            android:alpha="0"
            android:rotation="180"
            android:scaleY="0.6"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/star4_reflection"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="35dp"
            android:alpha="0"
            android:rotation="180"
            android:scaleY="0.6"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/star5_reflection"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="30dp"
            android:alpha="0"
            android:rotation="180"
            android:scaleY="0.6"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/star6_reflection"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="40dp"
            android:alpha="0"
            android:rotation="180"
            android:scaleY="0.6"
            android:src="@drawable/star" />

        <!-- Wave layers for animation -->
        <View
            android:id="@+id/wave1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="top"
            android:alpha="0.3"
            android:background="@drawable/wave_overlay" />

        <View
            android:id="@+id/wave2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="top"
            android:layout_marginTop="40dp"
            android:alpha="0.2"
            android:background="@drawable/wave_overlay" />

        <View
            android:id="@+id/wave3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:layout_marginTop="80dp"
            android:alpha="0.15"
            android:background="@drawable/wave_overlay" />
    </FrameLayout>
</LinearLayout>